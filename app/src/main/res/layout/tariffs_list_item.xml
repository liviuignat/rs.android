<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tariff_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/c24_dark_blue"
                android:textSize="20dp"
                android:text="91 â‚¬"/>

            <TextView
                android:id="@+id/tariff_payment_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="monatlich"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tariff_insurance_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/c24_dark_gray"
                android:textSize="20dp"
                android:text="Deurag"/>

            <TextView
                android:id="@+id/tariff_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textStyle="bold"
                android:text="SB-Vario DIREKT"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>

        <com.c24.rs.app.uicontrols.TariffNote_
            android:id="@+id/tariff_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </com.c24.rs.app.uicontrols.TariffNote_>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/tariff_feature_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textSize="12dp"
                android:text="feature 0"/>

            <TextView
                android:id="@+id/tariff_feature_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textSize="12dp"
                android:text="feature 1"/>

            <TextView
                android:id="@+id/tariff_feature_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textSize="12dp"
                android:text="feature 2"/>

            <TextView
                android:id="@+id/tariff_feature_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textSize="12dp"
                android:text="feature 3"/>

            <TextView
                android:id="@+id/tariff_important_hint_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textSize="12dp"
                android:text="important hint 0"/>

            <TextView
                android:id="@+id/tariff_important_hint_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textSize="12dp"
                android:text="important hint 1"/>

            <TextView
                android:id="@+id/tariff_important_hint_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textSize="12dp"
                android:text="important hint 2"/>

            <TextView
                android:id="@+id/tariff_important_hint_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textSize="12dp"
                android:text="important hint 3"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>